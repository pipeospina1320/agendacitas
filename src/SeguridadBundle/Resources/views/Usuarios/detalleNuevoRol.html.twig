{% extends '::base_sin_menu.html.twig' %}
{% block title %}Permiso documento detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Seguridad
            <small>Rol: nuevo</small>
        </h1>
    </section>
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>            
                <th>ROL</th>
                <th></th>
            </tr>       
            {%for arRoles in arRoles %}
                <tr>                
                    <td>{{arRoles.nombre}}</td>                
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRoles.codigoRolPk }}" /></td>
                </tr>
            {%endfor%}                        
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>  
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>    
{% endblock %}