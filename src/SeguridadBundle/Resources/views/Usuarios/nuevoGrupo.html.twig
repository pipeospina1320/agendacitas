{% extends '::base.html.twig' %}
{% block content %}
    <section class="content-header">
        <h1>
            Seguridad
            <small>Grupo: nuevo</small>
        </h1>

    </section>    
    <section class="content">     
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n general</div>
            <div class="panel-body">           
                <div class="form-group form-group-sm">
                    <div class="col-sm-12">
                        {{ form_row(form.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','autofocus':'autofocus'} }) }}
                    </div>
                </div>
        </div>                
        <div class="modal-footer">     
            <a class="btn btn-default btn-sm" href="{{ path('usuario_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
        </div>    
        {{ form_end(form) }}
    </div>
    <br/><br/><br/><br/>
</section> 
{% endblock %}