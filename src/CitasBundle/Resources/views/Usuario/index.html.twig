{% extends '::base.html.twig' %}

{% block body %}
    <h1>Usuarios</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td><a href="{{ path('usuario_show', { 'codigoUsuarioPk': usuario.codigoUsuarioPk }) }}">{{ usuario.codigoUsuarioPk }}</a></td>
                    <td>{{ usuario.nombre }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('usuario_show', { 'codigoUsuarioPk': usuario.codigoUsuarioPk }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('usuario_edit', { 'codigoUsuarioPk': usuario.codigoUsuarioPk }) }}">Editar</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_new') }}">Nuevo</a>
        </li>
    </ul>
{% endblock %}
