{% extends '::base_sin_menu.html.twig' %}
{% block title %}Buscar item - Soga App{% endblock %}
{% block content %}
    <script language="javascript">
        function selTercero(codigo, nombre, campoCodigo, campoNombre)
        {
            opener.document.getElementById(campoCodigo).value = codigo;
            opener.document.getElementById(campoNombre).value = nombre;
            opener.document.getElementById(campoCodigo).focus();
            self.close();
        }
    </script>    
    <div class="page-header">
        <h3>Buscar item</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}                
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">                
            <div class="form-group form-group-sm">  
                <label for="form_TxtNombreItem" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtNombreItem , { 'attr': {'class': 'form-control','autofocus':'autofocus', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>                   
            </div>                       
            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigoItem" class="col-sm-3 control-label">Codigo:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtCodigoItem, { 'attr': {'class': 'form-control'} }) }}
                </div>      
            </div>   
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div>        
    <table  class="table table-striped table-bordered table-condensed table-hover">            
        <tr>
            <th>{{ knp_pagination_sortable(arItems, 'CODIGO', 'i.codigoItemPk') }}</th>                
            <th>{{ knp_pagination_sortable(arItems, 'NOMBRE', 'i.nombre') }}</th>                                                
            <th></th>
        </tr>
        {% for arItems in arItems %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arItems.codigoItemPk }}">{{ arItems.codigoItemPk }} </td>                
                <td>{{ arItems.nombre }}</td>                                                                
                <td style="text-align: center"><a href="javascript:selTercero('{{ arItems.codigoItemPk }}','{{ arItems.nombre }}','{{ campoCodigo }}','{{ campoNombre }}')" ><img src="{{ asset('imagenes/bootstrap/glyphicons_198_ok.png') }}" width=20 height=20></a></td>                                                
            </tr>
        {% endfor %} 
    </table>                                         


    <!-- Botones Menu Items -->
    <div class="btn-toolbar">            
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arItems.getTotalItemCount }}</span></div>                        
        </div>     
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arItems) }}       
        </div>            
    </div>          
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}      
{% endblock %}
