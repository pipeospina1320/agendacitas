{% extends '::base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Nueva Cita</h1>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Editar citas
                </div>       
                <div class="panel-body">

                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    <div class="form-group form-group-sm">
                        <label for="form_cargo" class="col-sm-2 control-label">Hora cita:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.horaCita) }}
                        </div>
                        <label for="form_grupoRel" class="col-sm-2 control-label">fecha cita:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.diaCita) }}
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="form_cargo" class="col-sm-2 control-label">Cliente:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.clienteRel) }}
                        </div>
                        <label for="form_grupoRel" class="col-sm-2 control-label">Estilista</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.usuarioRel) }}
                        </div>
                    </div>  
                    <div class="form-group form-group-sm">
                        <label for="form_cargo" class="col-sm-2 control-label">Asunto:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.asuntoCita) }}
                        </div>
                    </div>
                    <div class="btn-toolbar" style="float: right">
                        <div class="col-sm-5">
                            <input class="btn btn-primary" type="submit" value="Guardar" />
                        </div>
                        <div class="col-sm-4">
                            <a class="btn btn-default" href="{{ path('citas_lista') }}">Volver</a>
                        </div>
                    </div> 
                    {{ form_end(form) }}


                </div>
                <ul>

                </ul>
            </div>
        </div>
    {% endblock %}
