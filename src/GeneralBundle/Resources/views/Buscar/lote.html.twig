{% extends '::base_sin_menu.html.twig' %}
{% block title %}Buscar lote - Soga App{% endblock %}
{% block content %}
    <script language="javascript">
        function selLote(codigo, campoCodigo)
        {
            opener.document.getElementById(campoCodigo).value = codigo;
            opener.document.getElementById(campoCodigo).focus();
            self.close();
        }
    </script>    
    <div class="page-header">
        <h3>Buscar lote</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}                
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">  
                <label for="form_TxtNombre" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control','autofocus':'autofocus', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>                   
            </div>  

            <div class="form-group form-group-sm">  
                <label for="form_TxtNit" class="col-sm-3 control-label">Nit:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}
                </div>      
            </div>   
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div>        
    <table  class="table table-striped table-bordered table-condensed table-hover">            
        <tr>
            <th>ITEM</th>
            <th>LOTE</th>
            <th>BODEGA</th>
            <th>EXISTENCIA</th>
            <th></th>
        </tr>
        {% for arLotes in arLotes %}
            <tr>
                <td>{{ arLotes.loteFk }} </td>
                <td>{{ arLotes.itemRel.nombre }}</td> 
                <td>{{ arLotes.codigoBodegaFk }}</td> 
                <td>{{ arLotes.cantidadExistencia }}</td> 
                <td style="text-align: center"><a href="javascript:selLote('{{ arLotes.loteFk }}','{{ campoLote }}')" ><img src="{{ asset('imagenes/bootstrap/glyphicons_198_ok.png') }}" width=20 height=20></a></td>                                                
            </tr>
        {% endfor %} 
    </table>                                         


    <!-- Botones Menu Items -->
    <div class="btn-toolbar">            
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arLotes.getTotalItemCount }}</span></div>                        
        </div>     
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arLotes) }}       
        </div>            
    </div>          
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}      
{% endblock %}
