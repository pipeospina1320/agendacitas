{% extends '::base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="page-wrapper">
            <h1>Configuracions list</h1>

            <table>
                <thead>
                    <tr>
                        <th>Codigoconfiguracionpk</th>
                        <th>Tipodocumento</th>
                        <th>Horaapertura</th>
                        <th>Horacierre</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                   
                    {% for configuracion in configuracions %}
                        <tr>
