                                <ul>
                                    <li>
                                        <a href="{{ path('configuracion_show', { 'codigoConfiguracionPk': configuracion.codigoConfiguracionPk }) }}">show</a>
                                    </li>
                                </ul>
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('cierre_periodo') }}', 'buscarItem', 600, 900)">Cierre de periodo</a>
                                </div>
                               
                            </td>
                        </tr>
                    {% endfor %}
          
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
