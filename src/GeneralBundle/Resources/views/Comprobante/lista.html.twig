{% extends '::base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Comprobantes</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Lista
                        </div>
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="citas">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Prefijo comprobante</th>
                                        <th>Ultimo consecutivo</th>
                                        <th>Descripcion</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for comprobante in comprobantes %}
                                        <tr>
                                            <td><a href="{{ path('comprobante_show', { 'codigoComprobantePk': comprobante.codigoComprobantePk }) }}">{{ comprobante.codigoComprobantePk }}</a></td>
                                            <td>{{ comprobante.nombreComprobante }}</td>
                                            <td>{{ comprobante.prefijoComprobante }}</td>
                                            <td>{{ comprobante.ultimoConsecutivo }}</td>
                                            <td>{{ comprobante.descripcion }}</td>
                                            <td>
                                                <ul>
                                                    <a class="fa fa-edit fa-align-center fa-1x" href="{{ path('comprobante_editar', { 'codigoComprobantePk': comprobante.codigoComprobantePk }) }}"></a>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <a class="btn btn-default" href="{{ path('comprobante_nuevo') }}">Nuevo</a>
        </div>
    </div>
{% endblock %}
