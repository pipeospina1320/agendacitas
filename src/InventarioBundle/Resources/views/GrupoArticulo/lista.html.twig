{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Articulos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lista
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>Id </th>
                                <th>Nombre</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for arGrupoArticulo in arGrupoArticulo %}
                                <tr>
                                    <td><a>{{ arGrupoArticulo.codigoGrupoArticuloPk }}</a></td>
                                    <td>{{ arGrupoArticulo.nombreGrupoArticulo }}</td>
                                    <td>
                                        <a class="fa fa-edit fa-1x" href="{{ path('grupo_editar', { 'codigoGrupoArticuloPk': arGrupoArticulo.codigoGrupoArticuloPk }) }}"></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <li>
        <a href="{{ path('grupo_nuevo') }}">Nuevo grupo</a>
    </li>


{% endblock %}
