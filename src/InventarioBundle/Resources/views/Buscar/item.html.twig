{% extends '::base_sin_menu.html.twig' %}
{% block title %}Buscar item - Soga App{% endblock %}
{% block content %}
 
    </script>    
    <div class="page-header">
        <h3>Buscar Articulo</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}                
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">                
            <div class="form-group form-group-sm">  
                <label for="form_TxtNombreArticulo" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtNombreArticulo , { 'attr': {'class': 'form-control','autofocus':'autofocus', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                </div>                   
            </div>                       
            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigoArticulo" class="col-sm-3 control-label">Codigo:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtCodigoArticulo, { 'attr': {'class': 'form-control'} }) }}
                </div>      
            </div>   
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div>        
    <table  class="table table-striped table-bordered table-condensed table-hover">            
        <tr>
            <th>{{ knp_pagination_sortable(arArticulo, 'CODIGO', 'i.codigoArticuloPk') }}</th>                
            <th>{{ knp_pagination_sortable(arArticulo, 'NOMBRE', 'i.nombreArticulo') }}</th>                                                
            <th></th>
        </tr>
        {% for arArticulo in arArticulo %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arArticulo.codigoArticuloPk }}">{{ arArticulo.codigoArticuloPk }} </td>                
                <td>{{ arArticulo.nombreArticulo }}</td> 
                <td><input type="number" id="cantidad" value="{{ arFacturaDetalle.cantidad}}"/></td>
                <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arArticulo.codigoArticuloPk }}" /></td>
                
            </tr>
        {% endfor %} 
    </table>                                         


    <!-- Botones Menu Items -->
    <div class="btn-toolbar">            
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arArticulo.getTotalItemCount }}</span></div>                        
        </div>     
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arArticulo) }}       
        </div>            
    </div>          
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}      
{% endblock %}
